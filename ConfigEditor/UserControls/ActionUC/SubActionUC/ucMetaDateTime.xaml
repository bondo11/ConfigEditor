<UserControl x:Class="ConfigEditor.UserControls.ActionUC.SubActionUC.ucMetaDateTime"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" >
    <DockPanel
        VerticalAlignment="Stretch" 
        Height="Auto">
        <DockPanel DockPanel.Dock="Top" VerticalAlignment="Stretch" 
        Height="Auto" Width="auto">
            <Label x:Name="lblDate" Content="Date Picker" Background="Transparent" DockPanel.Dock="Left" VerticalAlignment="Stretch" Height="Auto" />
        </DockPanel>
        <DockPanel DockPanel.Dock="Top" VerticalAlignment="Stretch" 
        Height="Auto" Width="auto">
            <DatePicker x:Name="dpDate" DockPanel.Dock="left" VerticalAlignment="Stretch" Height="Auto" SelectedDateChanged="dpDate_SelectedDateChanged" FirstDayOfWeek="Monday"/>
        </DockPanel>
    </DockPanel>
</UserControl>
