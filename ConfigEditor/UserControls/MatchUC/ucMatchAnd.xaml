            <Image x:Name="delMatch" Source="../../Pictures/discard.png" Width="20" Opacity="0.45" MouseDown="delMatch_MouseDown" MouseLeave="btn_MouseLeave" MouseEnter="btn_MouseEnter" />
            <!--<Button x:Name="delMatch" BorderThickness="0" Background="Transparent" Width="20" Height="20" >
